<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>entrypointappServlet</servlet-name>
    <servlet-class>se.esss.litterbox.itsenvmongwt.server.EntryPointAppServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>mqttServlet</servlet-name>
    <servlet-class>se.esss.litterbox.itsenvmongwt.server.MqttServiceImpl</servlet-class>
  <!--     <load-on-startup /> -->
   </servlet>
  
  <servlet-mapping>
    <servlet-name>entrypointappServlet</servlet-name>
    <url-pattern>/itsenvmongwt/entrypointapp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>mqttServlet</servlet-name>
    <url-pattern>/itsenvmongwt/mqtt</url-pattern>
  </servlet-mapping>

  <filter>
	<filter-name>gwtCacheControlFilter</filter-name>
	<filter-class>se.esss.litterbox.itsenvmongwt.server.GWTCacheControlFilter</filter-class>
  </filter>

  <filter-mapping>
	<filter-name>gwtCacheControlFilter</filter-name>
	<url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ItsEnvMonGwt.html</welcome-file>
  </welcome-file-list>

</web-app>
